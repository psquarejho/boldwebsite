{% extends 'BOLDHomeBundle:Default:base.html.twig' %}

{% block body %}
      <div id="header">
        <div id="wrapper">
          <div id="slider-wrapper">
            <div id="slider" class="nivoSlider">
              <img src="{{ asset('bundles/boldhome/images/slider/station.jpg') }}" alt="Our home" title="#stationcaption"/>
              <img src="{{ asset('bundles/boldhome/images/slider/titan.jpg') }}" alt="Our home" title="#titancaption"/>
              <img src="{{ asset('bundles/boldhome/images/slider/logi.jpg') }}" alt="Our home" title="#logicaption"/>
        	  </div>
            <div id="stationcaption" class="nivo-html-caption">Our home in CZK-ZQ</div>
            <div id="titancaption" class="nivo-html-caption">Waiting to go on an op</div>
            <div id="logicaption" class="nivo-html-caption">The magic logistics triangle</div>
          </div>
        </div>
      </div>

      <div id="column_box">
        <div class="column">
          <h2>About us</h2>
          <img src="{{ asset('bundles/boldhome/images/img1.png') }}" alt="" title="About Us"/>
	  <p>
